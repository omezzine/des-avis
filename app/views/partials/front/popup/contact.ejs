<div class="modal fade" id="contact" tabindex="-1" role="dialog" aria-labelledby="myContactModalLabel">
  <div class="modal-dialog" role="document">
    <form class="form" role="form" method="post" action="/ajax/contact" data-contact-form>
      <%- partial('partials/_csrf_and_method', {method: "POST"}) %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myContactModalLabel">Contactez-nous</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <% var email = (current_user && current_user.display_email)?(current_user.display_email):('') %>
            <label class="lb">E-mail</label>
            <input type="email" name="email" class="form-control" required="true" value="<%=email%>">
          </div>
          <div class="form-group">
            <label class="lb">Objet:</label>
            <input class="form-control" type="text" name="object" required="true">
          </div>
          <div class="form-group">
            <label class="lb">Message:</label>
            <textarea class="form-control" name="text" required="true"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
          <button type="submit" class="btn btn-primary">Envoyer</button>
        </div>
      </div>
    </form>
  </div>
</div>