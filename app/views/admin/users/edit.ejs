<% layout('/layouts/admin') -%>
<div class="row">
    <div class="col-md-6">
        <form role="form" action="/admin/users" method="POST">
            <%- partial('partials/_csrf_and_method', {method: "PUT"}) %>
            <input type="hidden" value="<%=user.id%>" name="id" >
            <div class="form-group">
                <label>Sex</label>
                <label class="radio-inline"><input type="radio" value="M" name="sex" <%= (user.sex === 'M')?('checked'):('') %>>M</label>
                <label class="radio-inline"><input type="radio" value="F" name="sex" <%= (user.sex === 'F')?('checked'):('') %>>F</label>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="email" value="<%= user.local.email %>" name="email" required="true">
            </div>
            <div class="form-group">
                <label>Birthday</label>
                <input class="form-control datepicker" type="text" name="birthday" value="<%= moment(user.birthday).format('MM/DD/YYYY') %>" required="true" data-date-format="mm/dd/yyyy">
            </div>
            <p style="color: red; margin-top: 50px; font-size: 11px;">Do not touch if you wont to update the password</p>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" value="" name="password">
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input class="form-control" type="password" name="confirm_password">
            </div>
            <button type="submit" class="btn btn-default">Create</button>
            <button type="reset" class="btn btn-default">Reset</button>
        </form>
    </div>
</div>