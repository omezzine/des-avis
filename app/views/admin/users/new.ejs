<% layout('/layouts/admin') -%>
<div class="row">
    <div class="col-md-6">
        <form role="form" action="/admin/users" method="POST">
            <%- partial('partials/_csrf_and_method', {method: "POST"}) %>
            <div class="form-group">
                <label>Sex</label>
                <label class="radio-inline"><input type="radio" value="M" name="sex">M</label>
                <label class="radio-inline"><input type="radio" value="F" name="sex">F</label>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="email" name="email" required="true">
            </div>
            <div class="form-group">
                <label>Birthday</label>
                <input class="form-control datepicker" type="text" name="birthday" required="true" data-date-format="mm/dd/yyyy">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" name="password" required="true">
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input class="form-control" type="password" name="confirm_password" required="true">
            </div>
            <button type="submit" class="btn btn-default">Create</button>
            <button type="reset" class="btn btn-default">Reset</button>
        </form>
    </div>
</div>