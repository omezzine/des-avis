<% layout('/layouts/admin') -%>

<div class="row">
    <div class="pull-left" style="margin-bottom: 50px">
        <%- partial('partials/admin/_buttons_toolbar', {delete_url: '/admin/comments/'+comment.id, edit_url: 'test', show_url: 'qfqd'}) %>
    </div>
</div>
<div class="row">
    <div class="form-group">
        <label>Created At</label>
        <p class="form-control-static"><%= moment(comment.created_at).fromNow() %></p>
    </div>
    <div class="form-group">
        <label>Posted By</label>
        <p class="form-control-static">
        	<a href="/admin/users/<%=comment.owner._id%>">
        	<%= comment.owner.display_name %></a>
        </p>
    </div>
    <div class="form-group">
        <label>Likes</label>
        <p class="form-control-static"><%= comment.votes_count %></p>
    </div>
    <div class="form-group">
        <label>Signaled</label>
        <p class="form-control-static"><%= comment.spams_count %></p>
    </div>
    <div class="form-group">
        <label>Comment</label>
        <p class="form-control-static"><%= comment.text %></p>
    </div>
    <div class="form-group">
        <label>sub comments (<%= comment.sub_comments.length %>)</label>
        <p class="form-control-static">
        	<ul>
        	 <% comment.sub_comments.forEach(function(sub_comment) { %>
        	 	<li><a href="/admin/comments/<%=sub_comment.id%>"><%=sub_comment.text%></a></li>
        	 <%})%>
        	</ul>
        </p>
    </div>
</div>
