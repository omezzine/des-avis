<% layout('/layouts/admin') -%>


<div class="row">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Owner</th>
                <th>Comment</th>
                <th>Signaled count</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% comments.forEach(function(comment){ %>
            <tr>
                <td><a href="/admin/users/<%=comment.owner._id%>"><%= comment.owner.display_name %></a></td>
                <td><%= comment.text%></td>
                <td><%= comment.spams_count %></td>
                <td>
                    <a href="/admin/comments/<%=comment.id%>"> show </a>
                </td>
            </tr>
            <%})%>
        </tbody>
    </table>
</div>


