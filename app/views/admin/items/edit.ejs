<% layout('/layouts/admin') -%>

<div class="row">
    <form role="form" action="/admin/items" method="POST">
        <%- partial('partials/_csrf_and_method', {method: "PUT"}) %>
        <div class="form-group">
            <label>Label</label>
            <input class="form-control" type="text" name="label" value="<%= item.label %>">
        </div>
        <div class="form-group">
            <label>parent</label>
            <select class="form-control" name="parent">
                <% categories.forEach(function(category){ %>
                    <option value="<%=category._id%>" <%=(item.category === category._id)?("selected"):("")%> ><%=category.label%></option>
                <% }) %>
            </select>
        </div>
        <button type="submit" class="btn btn-default">Create</button>
        <button type="reset" class="btn btn-default">Reset</button>
    </form>
</div>

