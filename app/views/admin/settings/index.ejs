<% layout('/layouts/admin') -%>
<div class="panel-group col-md-12" id="accordion" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne">
            <h4 class="panel-title">
            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                Edit Password
            </a>
            </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne" aria-expanded="false">
            <div class="panel-body">
                <form role="form" action="/admin/settings/updateProfil" method="POST" >
                    <%- partial('partials/_csrf_and_method', {method: "PUT"}) %>
                    <div class="form-group">
                        <label>Old Password</label>
                        <input class="form-control" type="password" name="old_password" value="">
                    </div>
                    <div class="form-group">
                        <label>New Password</label>
                        <input type="password" name="new_password" class="form-control" placeholder="Enter text" value="">
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" name="confirm_password" class="form-control" placeholder="Enter text" value="">
                    </div>
                    <button type="submit" class="btn btn-default">Update</button>
                    <button type="reset" class="btn btn-default">Reset</button>
                </form>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingTwo">
            <h4 class="panel-title">
            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                New Admin
            </a>
            </h4>
        </div>
        <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo" aria-expanded="false">
            <div class="panel-body">
                <form role="form" action="/admin/settings/createAdmin" method="POST" >
                    <%- partial('partials/_csrf_and_method', {method: "POST"}) %>
                    <div class="form-group">
                        <label>Sex</label>
                        <label class="radio-inline"><input type="radio" value="M" name="sex" required="true">M</label>
                        <label class="radio-inline"><input type="radio" value="F" name="sex" required="true">F</label>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" type="text" name="email" value="" required="true">
                    </div>
                     <div class="form-group">
                        <label>Birthday</label>
                        <input class="form-control datepicker" type="text" name="birthday" required="true" data-date-format="mm/dd/yyyy" required="true">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" name="password" class="form-control" placeholder="Enter text" value="" required="true">
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" name="confirm_password" class="form-control" placeholder="Enter text" value="" required="true">
                    </div>
                    <button type="submit" class="btn btn-default">Create</button>
                    <button type="reset" class="btn btn-default">Reset</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>