<% layout('/layouts/admin') -%>

<div class="row">
    <form role="form" action="/admin/categories" method="POST">
        <%- partial('partials/_csrf_and_method', {method: "POST"}) %>
        <div class="form-group">
            <label>Label</label>
            <input class="form-control" type="text" name="label" value="<%= category.label %>" required="true">
        </div>
        <div class="form-group">
            <label>Amazon Used Label</label>
            <input class="form-control" type="text" name="amazon_label">
        </div>
        <div class="form-group">
            <label>parent</label>
            <select class="form-control" name="parent_id">
                <option></option>
                <% categories.forEach(function(category){ %>
                    <option value="<%=category._id%>"><%=category.label%></option>
                <% }) %>
            </select>
        </div>
        <button type="submit" class="btn btn-default">Create</button>
        <button type="reset" class="btn btn-default">Reset</button>
    </form>
</div>
